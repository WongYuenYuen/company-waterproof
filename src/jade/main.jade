doctype html
html(lang="zh")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    block title
      title Default title
    include ./css.jade
    include ./script.jade

  body
    include ./menu.jade
    div.ui.large.top.fixed.hidden.menu
      div.ui.container
        +menuList
    div.ui.vertical.inverted.sidebar.menu
      +menuList

    div.pusher

      div.ui.inverted.vertical.masthead.center.aligned.segment
        div.image-preload
          img(src="../images/rainEffect/drop-color.png")
          img(src="../images/rainEffect/drop-alpha.png")
          img(src="../images/rainEffect/weather/texture-rain-fg.png")
          img(src="../images/rainEffect/weather/texture-rain-bg.png")
          img(src="../images/rainEffect/weather/texture-sun-fg.png")
          img(src="../images/rainEffect/weather/texture-sun-bg.png")
          img(src="../images/rainEffect/weather/texture-fallout-fg.png")
          img(src="../images/rainEffect/weather/texture-fallout-bg.png")
          img(src="../images/rainEffect/weather/texture-drizzle-fg.png")
          img(src="../images/rainEffect/weather/texture-drizzle-bg.png")

        div.rain-container
          div.slideshow
            canvas(width="1" height="1" id="container" style="position:absolute;left:0;")
            div.slide#slide-1(data-weather="rain")
              div.slide__element.slide__element--temp 豪睿建筑防水工程
      
        div.ui.container
          div.ui.large.secondary.inverted.pointing.menu
            a.toc.item
              i.sidebar.icon
            +menuList

      div.ui.vertical.segment.centered.custom-content
        block content
      div.ui.inverted.vertical.footer.segment.custom-footer
        div.ui.container.center
          p.center 豪睿建筑防水工程有限公司 <br/>广州市番禺区市桥光明北路372号
